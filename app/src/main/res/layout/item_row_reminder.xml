<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/layout_selected_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_reminder_medicine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Nama Obat"
                android:layout_alignParentEnd="true"
                android:textAppearance="?attr/textAppearanceHeadline6"/>

            <TextView
                android:id="@+id/tv_reminder_repetion_once_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_reminder_medicine_name"
                android:layout_marginStart="8dp"
                android:text="Tablet"
                android:textSize="7pt"
                android:textColor="@color/abu_abu" />

            <TextView
                android:id="@+id/tv_reminder_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_reminder_repetion_once_day"
                android:layout_marginStart="8dp"
                android:text="Tablet"
                android:textSize="7pt"
                android:textColor="@color/abu_abu" />

            <TextView
                android:id="@+id/tv_reminder_repetion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_reminder_time"
                android:layout_marginStart="8dp"
                android:text="Tablet"
                android:textSize="7pt"
                android:textColor="@color/abu_abu" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>