<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context=".ui.bookcontrol.ControlBookFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/section_bookcontrol_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_control_book_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginVertical="32dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/img_control_book_profile"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_controlbook_patien_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="5pt"
                    android:text="Nomor medical record:"/>

                <TextView
                    android:id="@+id/tv_controlbook_patien_medical_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="546372819"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_controlbook_profile_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat detail"
                    style="?attr/materialButtonOutlinedStyle" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/section_bookcontrol_profile"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_controlbook_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 Januari 2022"
                        android:layout_margin="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/green_700"/>

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/silver"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Dokter"
                        android:layout_marginHorizontal="16dp"/>

                    <TextView
                        android:id="@+id/tv_controlbook_doctor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dr. Richard Lee"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status Kesehatan"
                        android:layout_marginHorizontal="16dp"/>

                    <TextView
                        android:id="@+id/tv_controlbook_medical_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Baik"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Catatan"
                        android:layout_marginHorizontal="16dp"/>

                    <TextView
                        android:id="@+id/tv_controlbook_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>