<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bookcontrol.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pasien" />

            <TextView
                android:id="@+id/tv_profile_patien_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Medical Record" />

            <TextView
                android:id="@+id/tv_profile_patien_medical_record_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rumah Sakit Rujukan" />

            <TextView
                android:id="@+id/tv_profile_patien_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnosa" />

            <TextView
                android:id="@+id/tv_profile_patien_diagnisis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor BPJS Kesehatan" />

            <TextView
                android:id="@+id/tv_profile_patien_bpjs_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"/>

            <TextView
                android:id="@+id/tv_profile_patien_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat" />

            <TextView
                android:id="@+id/tv_profile_patien_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon" />

            <TextView
                android:id="@+id/tv_profile_patien_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>