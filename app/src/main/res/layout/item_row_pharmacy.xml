<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp">

    <RelativeLayout
        android:id="@+id/layout_selected_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_pharmacy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pharmacy_image"/>

        <TextView
            android:id="@+id/text_pharmacy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Paracetamol lorem ipsum dolor sit amet lorem"
            android:layout_toEndOf="@id/image_pharmacy"
            android:layout_alignParentEnd="true"
            android:textAppearance="?attr/textAppearanceHeadline6"/>

        <TextView
            android:id="@+id/text_pharmacy_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_pharmacy"
            android:layout_below="@id/text_pharmacy_name"
            android:layout_marginStart="8dp"
            android:text="Tablet"
            android:textSize="7pt"
            android:textColor="@color/abu_abu"
            android:textAppearance="?attr/textAppearanceHeadline6"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>